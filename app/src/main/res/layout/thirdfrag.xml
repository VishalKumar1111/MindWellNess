<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_mindfull"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="4dp"
            android:layout_margin="15dp">


            <ImageView
                android:id="@+id/img_mindfull"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/mindfull" />

            <TextView
                android:id="@+id/text_mindfull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:textColor="@color/black"
                android:layout_gravity="bottom"
                android:textStyle="bold|italic"
                android:text="MINFULL MEDITATION"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_vipasana"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="4dp"
            android:layout_margin="15dp">


            <ImageView
                android:id="@+id/img_vipasana"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/vipassana" />

            <TextView
                android:id="@+id/info_vipasana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:layout_gravity="bottom"
                android:text="Vipasana Meditation"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_sukhasana"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="4dp"
            android:layout_margin="15dp">


            <ImageView
                android:id="@+id/img_sukhasana"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/sukhasana" />

            <TextView
                android:id="@+id/info_sukhasana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:layout_gravity="bottom"
                android:text="Sukhasana Meditation"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_breadth"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="4dp"
            android:layout_margin="15dp">


            <ImageView
                android:id="@+id/img_breadth"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/breadt_awareness" />

            <TextView
                android:id="@+id/info_breadth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:layout_gravity="bottom"
                android:text="Breath Awareness Meditation"
                android:textSize="25sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>